		</transform>
    <bsdf type="roughconductor">
			<float name="alpha" value="0.1"/>
      <string name="distribution" value="beckmann"/>
      <rgb name="k" value="0.99,0.99,0.99"/>
    </bsdf>
	</shape>

	<shape type="obj" >
		<string name="filename" value="meshes/ball.obj" />
